{
	"name": "mohamed-amer-learning-npm-100",
	"type": "module",
	"version": "0.0.5",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"license": "MIT",
	"author": "Mohamed Amer",
	"scripts": {
		"build": "tsup src/index.ts src/icons --dts --format cjs,esm --out-dir dist",
		"lint": "tsc",
		"dev": "bun test --watch",
		"test": "bun test",
		"ci": "bun run lint && bun run test && bun run build",
		"release": "bun run ci && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.7",
		"@types/bun": "latest",
		"@types/react": "^18.3.4",
		"tsup": "^8.2.4",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"react": "^18.3.1"
	}
}
